<% title @job.title %>
<h2><%= @job.title %></h2>
<p>
  <b>Company:</b>
  <%= link_to @job.place.title, @job.place %>
</p>
<p>
  <b>Location:</b>
  <%= @job.place.location %>
</p>
<p>
  <b>Website:</b>
  <%= link_to @job.place.website, @job.place.website %>
</p>
<p>
  <b>Period:</b>
  <%= @job.period %> (<%= distance_of_time_in_words(@job.ended_at.blank? ? DateTime.now : @job.ended_at, @job.started_at.prev_month) %>)
</p>
<p>
  <b>Description:</b>
  <%= @job.description %>
</p>
<%= raw(disqus_thread) %>
